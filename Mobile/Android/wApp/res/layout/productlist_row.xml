<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dip" >

    <ImageView
        android:id="@+id/iv_product_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dip"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dip"
        android:layout_toRightOf="@+id/iv_product_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prodcut1"
            android:textSize="12dip" />

        <LinearLayout
            android:id="@+id/linear_layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_product_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coutton-clothes"
                android:textColor="@color/splash_background_blue"
                android:textSize="11dip" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="297 KB PNG file"
                android:textColor="@color/light_gray"
                android:textSize="11dip" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_subtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today at 12.04 PM"
            android:textColor="@color/light_gray"
            android:textSize="11dip" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_remove_red_eye_black_24dp"
            android:drawablePadding="1dip"
            android:text="private file"
            android:textSize="11dip" />
    </LinearLayout>

</RelativeLayout>